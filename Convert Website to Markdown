javascript:(function(){let newUrl="https://r.jina.ai/"+location.hostname+location.pathname;fetch(newUrl).then(response=>{if(!response.ok){throw new Error("Server responded with status: "+response.status);}return response.text();}).then(html=>{let doc=new DOMParser().parseFromString(html,"text/html");let text=doc.body?doc.body.innerText:"(No readable text found)";alert("Successfully loaded the text version.");if(confirm("Do you want to copy the text to clipboard?")){navigator.clipboard.writeText(text).then(()=>{alert("Text copied to clipboard!\n\n"+text.substring(0,200)+"...");if(confirm("Do you want to visit the text version of the page?")){window.location.href=newUrl;}}).catch(err=>alert("Failed to copy text: "+err));}else{window.location.href=newUrl;}}).catch(error=>alert("Error: "+error.message));})();
